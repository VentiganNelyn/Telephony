<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/bg"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CONTACTS"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textSize="50sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:padding="13dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/papname"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Papa"
                android:textColor="#1B1919"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/papnum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="09123456789"
                android:textColor="#000000"
                android:textSize="17sp" />

        </LinearLayout>

        <ImageButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="46dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="15dp"
            android:onClick="msgbtn"
            android:src="@drawable/sms" />

        <ImageButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="8dp"
            android:onClick="callbtn"
            android:src="@drawable/call" />
    </LinearLayout>

    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/mamname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mama"
                android:textColor="#121111"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/mamnum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="09234567891"
                android:textColor="#000000"
                android:textSize="17sp" />

</LinearLayout>

    <ImageButton
         android:onClick="msgbtn2"
         android:layout_marginTop="8dp"
         android:layout_width="70dp"
         android:layout_height="70dp"
         android:src="@drawable/sms"
         android:layout_marginRight="15dp"
         android:layout_marginLeft="50dp"/>

    <ImageButton
        android:onClick="callbtn2"
        android:layout_marginTop="8dp"
         android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/call"/>

</LinearLayout>

    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

            <TextView
                android:id="@+id/kuyname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kuys"
                android:textColor="#171616"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/kuynum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="09127845963"
                android:textColor="#000000"
                android:textSize="17sp" />

</LinearLayout>

    <ImageButton
        android:onClick="msgbtn3"
        android:layout_marginTop="8dp"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/sms"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="15dp"/>

    <ImageButton
        android:onClick="callbtn3"
        android:layout_marginTop="8dp"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/call"/>

</LinearLayout>

    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/atename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ate"
            android:textColor="#131313"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/atenum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="09987456321"
            android:textColor="#000000"
            android:textSize="17sp" />

</LinearLayout>

        <ImageButton
            android:onClick="msgbtn4"
            android:layout_marginTop="8dp"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/sms"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="15dp"/>

        <ImageButton
            android:onClick="callbtn4"
            android:layout_marginTop="8dp"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/call"/>

</LinearLayout>

        <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/bunname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Buntis"
                android:textColor="#070707"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/bunnum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="09090000351"
                android:textColor="#000000"
                android:textSize="17sp" />

</LinearLayout>

        <ImageButton
            android:onClick="msgbtn5"
            android:layout_marginTop="8dp"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/sms"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="15dp"/>

        <ImageButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="15dp"
            android:onClick="callbtn5"
            android:src="@drawable/call" />



    </LinearLayout>

</LinearLayout>